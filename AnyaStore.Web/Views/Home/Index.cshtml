@model IEnumerable<AnyaStore.Web.Models.DTO.ProductDTO>

<form>
    <div class="container row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="p-0 my-3 border rounded">
                    <div class="card">
                        <h3 class="card-title text-center py-2">@item.Name</h3>
                        <img src=@item.ImageUrl class="card-img-top" alt="...">
                        <div class="card-body">
                            <div class="d-flex justify-content-between py-2">
                                <span class="text-danger" style="font-size: 20px;">@string.Format("{0:c}",
                                item.Price)</span>
                                <span class="badge bg-warning text-white p-2"> @item.Category.Name</span>

                            </div>
                            <p class="card-text">@item.Description</p>
                            <div class="row">
                                <div class="col">
                                    <a asp-controller="Product" asp-action="ProductDetail"
                                        asp-route-productId="@item.ProductId"
                                        class="btn btn-success form-control">Details</a>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        }
    </div>
</form>
